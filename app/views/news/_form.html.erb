<%= form_with(model: news, local: true) do |form| %>
  <% if news.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(news.errors.count, "error") %> prohibited this news from being saved:</h2>

      <ul>
      <% news.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :news_title %>
  </div>

  <div class="field">
    <%= form.label :article_link %>
    <%= form.text_field :article_link, id: :news_article_link %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :news_description %>
  </div>

  <div class="field">
    <%= form.label :publisher %>
    <%= form.text_field :publisher, id: :news_publisher %>
  </div>

  <div class="field">
    <%= form.label :date_published %>
    <%= form.date_select :date_published, id: :news_date_published %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :news_author %>
  </div>

  <div class="field">
    <%= form.label :upvotes %>
    <%= form.number_field :upvotes, id: :news_upvotes %>
  </div>

  <div class="field">
    <%= form.label :tags %>
    <%= form.text_field :tag_list, id: :news_tags %>
  </div>

  <div class="field">
    <%= form.label :publisher_description %>
    <%= form.text_field :publisher_description, id: :news_publisher_description %>
  </div>

  <div class="field">
    <%= form.label :feed_id %>
    <%= form.number_field :feed_id, id: :news_feed_id %>
  </div>

  <div class="field">
    <%= form.label :feed_url %>
    <%= form.text_field :feed_url, id: :news_feed_url %>
  </div>

  <div class="field">
    <%= form.label :feed_description %>
    <%= form.text_field :feed_description, id: :news_feed_description %>
  </div>

  <div class="field">
    <%= form.label :publish %>
    <%= form.check_box :publish, id: :feed_publish %>
  </div>

  <% if !@categories.nil? %>
  <div class="field">
    <%= form.label :category_ids %>

    <%= form.collection_check_boxes :category_ids, @categories.order(:ordering), :id, :name do |c| %>
      <br>
      <% d = c.object.depth %>
      <% until d <= 0 do %>
      &nbsp;&nbsp;
      <% d = d - 1 %>
      <% end %>
        &nbsp;<%= c.check_box %>
        <%= c.object.name %>     
    <% end %>
  </div>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
