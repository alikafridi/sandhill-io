  </div>

  <div class="field">
    <%= form.label :alexa_rank %>
    <%= form.number_field :alexa_rank, id: :domain_alexa_rank %>
  </div>

  <div class="field">
    <%= form.label :funds_raised %>
    <%= form.text_field :funds_raised, id: :domain_funds_raised %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
