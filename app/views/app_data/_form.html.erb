  <div class="field">
    <%= form.label :app_type %>
    <%= form.text_field :app_type, id: :app_datum_app_type %>
  </div>

  <div class="field">
    <%= form.label :monthly_revenue %>
    <%= form.number_field :monthly_revenue, id: :app_datum_monthly_revenue %>
  </div>

  <div class="field">
    <%= form.label :monthly_downloads %>
    <%= form.number_field :monthly_downloads, id: :app_datum_monthly_downloads %>
  </div>

  <div class="field">
    <%= form.label :date_collected %>
    <%= form.datetime_select :date_collected, id: :app_datum_date_collected %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
