<%= form_with(model: app_datum, local: true) do |form| %>
  <% if app_datum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(app_datum.errors.count, "error") %> prohibited this app_datum from being saved:</h2>

      <ul>
      <% app_datum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :mobile_app_id %>
    <%= form.collection_select :mobile_app_id, MobileApp.all, :id, :name, include_blank: true %>
