<section class="bg-white">
  <div class="container height-md-30">
    <div class="row">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <h1 class="display-4">
          Blog Posts
        </h1>
        <p class="lead mb-0">
          Coming Soon
        </p>
      </div>
    </div>
  </div>
</section>

<section class="bg-white spacer-y-1">
  <div class="container">
    <div class="row justify-content-between">
      <div class="col-md-5 col-lg-4 mb-2 mb-md-0">
        <form class="d-sm-flex align-items-center">
          <select class="custom-select">
            <option selected value="null">Browse by category</option>
            <option value="1">Category 1</option>
            <option value="2">Category 2</option>
            <option value="3">Category 3</option>
          </select>
        </form>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <% @blogs.each do |blog| %>

      <div class="col-md-6 col-lg-4 d-flex">
        <div class="card">
          <a href="#">
            <img class="card-img-top" src="https://via.placeholder.com/300x200" alt="<%= blog.title %>">
          </a>
          <div class="card-body py-3">
            <h5><%= link_to blog.title, blog %></h5>
            <div class="mb-4">
              <p><%= blog.highlight %></p>
            </div>
            <a href="#" class="mb-2 d-block"><%= blog.tags %></a>
          </div>
          <div class="card-footer">
            <div class="d-flex align-items-center">
              <span><%= blog.author %></span>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <div class="center">
      <% if user_signed_in? %>
      <%= link_to 'New Blog Post', new_blog_path, class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>

    <div class="row justify-content-center mt-3">
      <div class="col-md-auto">
        <nav aria-label="Page navigation example">
          <%= will_paginate @blogs %>
        </nav>
      </div>
    </div>

