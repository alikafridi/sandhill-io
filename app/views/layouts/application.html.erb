<!DOCTYPE html>
<html>
<head>
  <title><%= site_name %></title>
  <%= csrf_meta_tags %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="google-site-verification" content="hUHSGJmsPyjuqtk19cRACRoho4IcV21nhvgvFAgwzPI" />

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <%= favicon_link_tag asset_path('web_icon.svg') %>

<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-80584615-9"></script>

<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-80584615-9');
</script>

</head>

<body>

<!-- Header -->
<%= render "layouts/header" %>

<!-- Flash Messages -->
<% flash.each do |name, message| %>
<%= content_tag(:div, message, class: "alert alert-info #{name}") %>
<% end %>

<!-- Page Content -->
<%= yield %>

<!-- Footer --> 
<%= render "layouts/footer" %>

</body>
</html>
